<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white_dark"
    android:fitsSystemWindows="true"
    app:behavior_hideable="true"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/song_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/black_20" />

            <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/seek_bar"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/song_image"
                android:layout_marginTop="-15dp"
                android:background="@android:color/transparent"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:progress="50"
                app:paddingEnd="0dp"
                app:paddingStart="0dp"
                app:theme="@style/AppTheme.SeekBar" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/time_stamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/song_duration_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="1:35"
                android:textColor="@color/textSecondary" />

            <TextView
                android:id="@+id/song_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="3:24"
                android:textColor="@color/textSecondary" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Song title"
                android:textColor="@color/textPrimary"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Song subtitle"
                android:textColor="@color/textSecondary"
                android:textSize="16sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/control_toolbar"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="@dimen/music_control_size"
                    android:layout_height="@dimen/music_control_size"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/item_bg"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_skip_previous_primary_24dp" />

                <ImageButton
                    android:layout_width="@dimen/music_control_size"
                    android:layout_height="@dimen/music_control_size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/item_bg"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_fast_rewind_primary_24dp" />

                <ImageButton
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/item_bg"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_play_arrow_primary_24dp" />

                <ImageButton
                    android:layout_width="@dimen/music_control_size"
                    android:layout_height="@dimen/music_control_size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/item_bg"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_fast_forward_primary_24dp" />

                <ImageButton
                    android:layout_width="@dimen/music_control_size"
                    android:layout_height="@dimen/music_control_size"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/item_bg"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_skip_next_primary_24dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_above="@id/control_toolbar"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/divider" />

            <LinearLayout
                android:id="@+id/control_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:weightSum="4">

                <ImageButton
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_format_list_bulleted_black_24dp" />

                <ImageButton
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_shuffle_black_24dp" />

                <ImageButton
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_repeat_black_24dp" />

                <ImageButton
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_more_vert_black_24dp" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</FrameLayout>